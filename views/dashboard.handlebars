<div id="bar"></div>
<div class="container">
  <div class="row">
    <div class="col-sm-3">
        
        <div class="profilePic">
            <img src="/images/placeholder.png">
        </div>
        <div class="profileInfo">
            <h3>{{person.first_name}}</h3>
        </div>

       <div class="openBtn">
      <button class="openButton" onclick="openForm()"><strong>Update Profile</strong></button>
    </div>
    <div class="loginPopup">
      <div class="formPopup" id="popupForm">
        <form action="/action_page.php" class="formContainer">
          <h4>Update your personal information</h4>

            <input type="text" id="email" placeholder="Your Email" name="email">

            <input type="password" id="psw" placeholder="Your Password" name="psw">

          <h4>Add a new individual to unit</h4>

             <input type="text" id="newIndF" placeholder="First Name" name="first">

             <input type="text" id="newIndL" placeholder="Last Name" name="last">

            <input type="text" id="indUnit" placeholder="Unit" name="psw"> 

          <button type="submit" class="btn">Submit</button>
          <button type="button" class="btn cancel" onclick="closeForm()">Close</button>
        </form>
      </div>
    </div>
    <script src="./js/pop-up.js"></script> 
  
  
  <button id="neighbors" class="btn"> My Neighbours</button>

    </div>
    <div class="col-sm-9" class="posts2">
      <h3 class="postTitle">POSTS</h3>
          {{#each posts as |post|}}
            {{!- #if}}
            <div id="posts">
                <h5>{{post.title}}</h5>
                <p>
                    {{post.content}}
                    <br><br>
                    {{format_date post.created_at}}
                </p>
             </div>  
          {{/each}}

          <button id="newPost" class="btn"> Create New Post</button>
    </div>
  </div>
</div>
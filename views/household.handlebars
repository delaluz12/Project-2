<div class="container">
<div class="row">
    <div class="col-sm-8">
      <h3 class="houseHoldTitle" style="color: #175c4a; font-size: 80px">My Household</h3>
         
          {{#each Household}}
            
            <ul id="householdMembers">
               {{#with people}}
                <li>{{first_name}} {{last_name}}</li>
                {{/with}}
             </ul>  
          {{/each}}

          
    </div>

    <div class="col-sm-4" class="posts2">
        <form class="updateInfoForm">
            <div class="form-group formContainer">
                <div class="personals">
                    <h6>Update your personal information</h6>
                        <input type="text" id="email" placeholder="Your Email">
                         <input type="password" id="psw" placeholder="Your Password">

                </div>
                 <button type="submit" class="btn" id="updateInfo" value="submit">Submit</button>
            </div>
           
        </form>
        <form class="addIndForm">
            <div class="form-group formContainer">

                <div class="adding">
                    <h6 >Add a new individual to unit</h6>

                        <input type="text" id="newIndF" placeholder="First Name" >
                        <input type="text" id="newIndL" placeholder="Last Name">
                            <select class="form-select" id="person_type">
                                <option selected value="null">I am a </option>
                                <option value="adult" id="adult">Adult</option>
                                <option value="child" id="pet">Child</option>
                                <option value="pet" id="pet">Pet</option>
                            </select>
                        <input type="tel" class="form-control" placeholder="Telephone Number" id="phone">
                        <input type="tel" class="form-control"  placeholder="cellphone Number" id="cell">
                        <input type="date"class="form-control"  placeholder="Birth Date" id="birthday" name="birthday">
                        {{!-- <input type="text" id="indUnit" placeholder="Unit id"> 
                        <input type="text" id="indId" placeholder="User id"> --}}
                </div>

                <button type="submit" class="btn" id="addPrsn" value="submit">Add</button>
            </div>
        </form>
    </div>
</div>
</div>
 <a href="/dashboard" class="d-flex justify-content-center text-decoration-none my-2">
    <button type="button" class="btn btn-primary back"> Back to Dashboard</button>
 </a>

 <script src="/js/addIndividual.js" ></script>
        
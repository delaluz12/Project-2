{{#each unit}}
<h3>{{unit_number}} {{unit_name}}</h3>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Family Member</th>
            <th scope="col">First</th>
            <th scope="col">Last</th>
            <th scope="col">Phone</th>
            <th scope="col">Cell</th>
            <th scope="col">Email</th>
        </tr>
    </thead>
    <tbody>
        {{#each people}}
        <tr>
            <th scope="row"></th>
            <td>{{type}}</td>
            <td>{{first_name}}</td>
            <td>{{last_name}}</td>
            <td>{{phone}}</td>
            <td>{{cell}}</td>
            <td><a href="mailto:{{email}}">{{email}}</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{/each}}